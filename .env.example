# VOICE Relay Environment Configuration
# Copy this to .env and fill in your values

# ============================================================================
# Environment
# ============================================================================
ENVIRONMENT=production

# ============================================================================
# Database
# ============================================================================
# For PostgreSQL (production):
DATABASE_URL=postgresql://voice_relay:password@localhost:5432/voice_relay

# For SQLite (development - default):
# DATABASE_URL=sqlite:///./voice_relay.db

# ============================================================================
# GitHub OAuth
# ============================================================================
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# ============================================================================
# Firebase Cloud Messaging (for push notifications)
# ============================================================================
FIREBASE_PROJECT_ID=your_firebase_project_id
FIREBASE_PRIVATE_KEY=your_firebase_private_key_json_base64

# ============================================================================
# Sentry (Error tracking and monitoring)
# ============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project_id

# ============================================================================
# API Configuration
# ============================================================================
PORT=8000
API_DOMAIN=https://api.voice-relay.app

# ============================================================================
# CORS Configuration
# ============================================================================
ALLOWED_ORIGINS=https://app.voice-relay.app,https://voice-relay.app

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_SECONDS=60

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
JSON_LOGS=true
